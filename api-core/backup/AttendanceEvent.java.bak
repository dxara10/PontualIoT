package com.pontualiot.demo.model;

import jakarta.persistence.*;
import jakarta.validation.constraints.NotNull;
import org.springframework.data.annotation.CreatedDate;
import org.springframework.data.jpa.domain.support.AuditingEntityListener;

import java.time.OffsetDateTime;
import java.util.UUID;

@Entity
@Table(name = "attendance_events", 
       indexes = {
           @Index(columnList = "employee_id, event_time"),
           @Index(columnList = "device_id, event_time"),
           @Index(columnList = "event_time")
       })
@EntityListeners(AuditingEntityListener.class)
public class AttendanceEvent {
    @Id
    @GeneratedValue(strategy = GenerationType.UUID)
    private UUID id;
    
    // TODO: Uncomment when Employee entity is available
    // @NotNull
    // @ManyToOne(fetch = FetchType.LAZY)
    // @JoinColumn(name = "employee_id", nullable = false)
    // private Employee employee;
    
    @NotNull
    @ManyToOne(fetch = FetchType.LAZY)
    @JoinColumn(name = "device_id", nullable = false)
    private Device device;
    
    @NotNull
    @Column(nullable = false)
    private OffsetDateTime eventTime;
    
    @NotNull
    @Enumerated(EnumType.STRING)
    @Column(nullable = false)
    private AttendanceEventType eventType;
    
    @Column(columnDefinition = "jsonb")
    private String metadata; // raw payload from device
    
    @NotNull
    @Column(nullable = false, length = 10)
    private String origin; // MQTT, HTTP, SDK
    
    @CreatedDate
    @Column(nullable = false, updatable = false)
    private OffsetDateTime createdAt;
    
    // Getters/Setters
    public UUID getId() { return id; }
    public void setId(UUID id) { this.id = id; }
    
    // TODO: Uncomment when Employee entity is available
    // public Employee getEmployee() { return employee; }
    // public void setEmployee(Employee employee) { this.employee = employee; }
    
    public Device getDevice() { return device; }
    public void setDevice(Device device) { this.device = device; }
    
    public OffsetDateTime getEventTime() { return eventTime; }
    public void setEventTime(OffsetDateTime eventTime) { this.eventTime = eventTime; }
    
    public AttendanceEventType getEventType() { return eventType; }
    public void setEventType(AttendanceEventType eventType) { this.eventType = eventType; }
    
    public String getMetadata() { return metadata; }
    public void setMetadata(String metadata) { this.metadata = metadata; }
    
    public String getOrigin() { return origin; }
    public void setOrigin(String origin) { this.origin = origin; }
    
    public OffsetDateTime getCreatedAt() { return createdAt; }
}