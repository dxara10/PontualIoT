package com.pontualiot.demo.repository;

import com.pontualiot.demo.config.TestConfig;
import com.pontualiot.demo.model.Company;
import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.autoconfigure.jdbc.AutoConfigureTestDatabase;
import org.springframework.boot.test.autoconfigure.orm.jpa.DataJpaTest;
import org.springframework.context.annotation.Import;
import org.springframework.test.context.ActiveProfiles;

import static org.assertj.core.api.Assertions.assertThat;

@DataJpaTest
@ActiveProfiles("test")
@AutoConfigureTestDatabase(replace = AutoConfigureTestDatabase.Replace.NONE)
@Import(TestConfig.class)
class CompanyRepositorySimpleTest {

    @Autowired
    private CompanyRepository companyRepository;

    @Test
    void shouldSaveCompanyWithBasicFields() {
        // Given
        Company company = new Company();
        company.setName("Test Company");
        company.setDocument("12345678000195");
        
        // When
        Company saved = companyRepository.save(company);
        
        // Then - verificar apenas os campos b√°sicos primeiro
        System.out.println("Saved company: " + saved);
        System.out.println("ID: " + saved.getId());
        System.out.println("Name: " + saved.getName());
        System.out.println("Active: " + saved.getActive());
        
        assertThat(saved).isNotNull();
        assertThat(saved.getName()).isEqualTo("Test Company");
        assertThat(saved.getDocument()).isEqualTo("12345678000195");
    }
}