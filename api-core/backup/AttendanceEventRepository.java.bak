package com.pontualiot.demo.repository;

import com.pontualiot.demo.model.AttendanceEvent;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import java.time.OffsetDateTime;
import java.util.List;
import java.util.UUID;

@Repository
public interface AttendanceEventRepository extends JpaRepository<AttendanceEvent, UUID> {
    
    @Query("SELECT ae FROM AttendanceEvent ae WHERE ae.device.id = :deviceId AND ae.employee.registration = :employeeRegistration AND ae.eventTime BETWEEN :startTime AND :endTime")
    List<AttendanceEvent> findDuplicateEvents(UUID deviceId, String employeeRegistration, OffsetDateTime startTime, OffsetDateTime endTime);
    
    List<AttendanceEvent> findByEmployeeIdOrderByEventTimeDesc(UUID employeeId);
}